<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.mydice.DisplayMessageActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:layout_above="@+id/resultNumComp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-115dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dice2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dice6" />

    </LinearLayout>

    <Button
        android:id="@+id/rollDices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="Roll Dices"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="@string/msg"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="239dp"
        android:layout_height="98dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/dice1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textMsgUsr"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textMsgPlay"
        android:layout_below="@+id/resultNumComp"
        android:text="@string/textMsgUser"
        android:textSize="18sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rollDices"
        android:layout_centerHorizontal="true"
        android:text="@string/play"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/resultNumComp"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/resultNumUser"
        android:layout_width="174dp"
        android:layout_height="38dp"
        android:layout_above="@+id/result"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textMsgPlay"
        android:layout_width="266dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp"
        android:text="@string/textMsgPlayer"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/result"
        android:layout_width="246dp"
        android:layout_height="73dp"
        android:layout_above="@+id/playBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-28dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="124dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="47dp"
        android:text="Play Again"
        android:visibility="invisible"
        tools:text="Play again"
        android:layout_alignParentRight="true"
        android:layout_marginRight="47dp" />


</RelativeLayout>